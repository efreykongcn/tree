{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "mingw-w64 gcc.exe build active file",
            "command": "C:/mingw-w64/bin/gcc.exe",
            "args": [
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/mingw-w64/*.c",
                "-o",
                "${workspaceFolder}/tree.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {}
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:/cygwin64/bin/gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/tree.exe"
            ],
            "options": {
                "cwd": "C:/cygwin64/bin/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}